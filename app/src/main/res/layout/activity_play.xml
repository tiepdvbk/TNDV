<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCD6D9FD">
    <com.example.dovui.ui.custom_views.BackgroundView
        android:id="@+id/backgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:background="#000000"
            android:layout_height="@dimen/_40sdp">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/ic_back1"
                android:layout_marginStart="@dimen/_5sdp" />
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/toolbar">
            <com.example.dovui.ui.custom_views.QuestionView
                android:background="@drawable/bag2"
                android:id="@+id/questionView"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2."
                />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
                <TableRow
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="0.5">
                    <com.example.dovui.ui.custom_views.AnswerView
                        android:id="@+id/answerViewA"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </TableRow>
                <TableRow
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="0.5">
                    <com.example.dovui.ui.custom_views.AnswerView
                        android:id="@+id/answerViewB"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </TableRow>
                <TableRow
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="0.5">
                    <com.example.dovui.ui.custom_views.AnswerView
                        android:id="@+id/answerViewC"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </TableRow>
                <TableRow
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="0.5">
                    <com.example.dovui.ui.custom_views.AnswerView
                        android:id="@+id/answerViewD"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/clock1"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:gravity="center"/>
    </RelativeLayout>
</RelativeLayout>